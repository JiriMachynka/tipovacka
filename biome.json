{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"semicolons": "always",
			"trailingCommas": "all",
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"lineWidth": 150
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "error"
			},
			"complexity": {
				"noUselessTypeConstraint": "error",
				"useArrowFunction": "warn"
			},
			"suspicious": {
				"noExplicitAny": "error",
        "useAwait": "warn",
				"noAssignInExpressions": "off"
			}
		}
	}
}
